<p style="color: green"><%= notice %></p>

<h1>Drivers</h1>

<div id="drivers">
  <% @drivers.each do |driver| %>
    <%= render driver %>
    <p>
      <%= link_to "Show this driver", driver %>
      <%= button_to "Destroy", driver, method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
  <% end %>
</div>

