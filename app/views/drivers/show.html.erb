

<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<p></p>
<h2>Driver Information</h2>
<p>
  <strong>Name:</strong>
  <%= @driver.name %>
</p>

<p>
  <strong>Contact number:</strong>
  <%= @driver.contact_number %>
</p>

<p>
  <strong>Bus:</strong>
  <%= @driver.bus.bus_number %>
</p>

<% if @driver.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag rails_blob_path(@driver.image) %>
  </p>
<% end %>

<h2>Bus Information</h2>
<table>
  <thead>
    <tr>
      <th>Bus Number</th>
      <th>Plate Number</th>
      <!-- Add additional headers for bus details if needed -->
    </tr>
  </thead>
  <tbody>
    <% if @driver.bus %>
      <tr>
        <td><%= @driver.bus.bus_number %></td>
        <td><%= @driver.bus.plate_number %></td>
        <!-- Add additional columns for bus details if needed -->
      </tr>
    <% else %>
      <tr>
        <td colspan="2">No assigned bus</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Show this driver", @driver %> |
  <%= link_to "Back to drivers", drivers_path %> |
  <%= link_to "Edit this driver", edit_driver_path(@driver) %> |
  <%= button_to "Destroy this driver", @driver, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
