
<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<p></p>
<h2>Trip Information</h2>

<p>
  <strong>Schedule:</strong>
  <% if @trip.schedule.present? %>
    <%= @trip.schedule.strftime("%m/%d/%Y, %I:%M %p") %>
  <% else %>
    N/A
  <% end %>
</p>

<p>
  <strong>Origin:</strong>
  <%= @trip.origin %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>

<p>
  <strong>Number of passengers:</strong>
  <%= @trip.number_of_passengers %>
</p>

<p>
  <strong>Unit fare:</strong>
  <%= number_to_currency(@trip.unit_fare, unit: '') %>
</p>

<p>
  <strong>Total fare:</strong>
  <%= number_to_currency(@trip.total_fare, unit: '') %>
</p>

<p>
  <strong>Bus:</strong>
  <%= @trip.bus.bus_number %>
</p>

<h2>Bus Details</h2>
<table>
  <thead>
    <tr>
      <th>Bus Number</th>
      <th>Plate Number</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @trip.bus.bus_number %></td>
      <td><%= @trip.bus.plate_number %></td>
    </tr>
  </tbody>
</table>

<h2>Driver(s)</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
    </tr>
  </thead>
  <tbody>
    <% @trip.bus.drivers.each do |driver| %>
      <tr>
        <td><%= driver.name %></td>
        <td><%= driver.contact_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Passengers</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @trip.passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.contact_number %></td>
        <td><%= passenger.email_address %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Show this trip", @trip %> |
  <%= link_to "Back to trips", trips_path %> |
  <%= link_to "Edit this trip", edit_trip_path(@trip) %> |
  <%= button_to "Destroy this trip", @trip, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
